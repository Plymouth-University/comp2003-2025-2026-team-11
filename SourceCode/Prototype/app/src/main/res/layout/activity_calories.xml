<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calories Summary"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This summary is based on your logged meals and exercises."
                android:textColor="#FFFFFF"
                android:paddingBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Daily calorie target (kcal)" />

            <EditText
                android:id="@+id/etDailyTarget"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:hint="e.g., 2000"
                android:inputType="number"
                android:padding="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Today’s totals"
                android:textStyle="bold"
                android:paddingTop="18dp"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tvConsumed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Calories consumed: 0 kcal"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tvBurned"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Calories burned (estimated): 0 kcal"
                android:padding="10dp" />

            <TextView
                android:id="@+id/tvNet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Net balance: 0 kcal"
                android:textStyle="bold"
                android:padding="10dp" />

            <Button
                android:id="@+id/btnRecalculate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginTop="14dp"
                android:text="Recalculate" />

            <Button
                android:id="@+id/btnResetDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:layout_marginTop="10dp"
                android:text="Reset Day" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Notes"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:paddingTop="18dp"
                android:paddingBottom="6dp" />

            <TextView
                android:id="@+id/tvNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Tip: log your meals and exercises first, then return here to see your day’s overview."
                android:padding="12dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Dashboard -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/bottom_nav_menu"
        app:backgroundTint="#1F1F1F"
        app:itemIconTint="#03DAC5"
        app:itemTextColor="#FFFFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>


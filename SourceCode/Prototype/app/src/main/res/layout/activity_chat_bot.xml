<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@id/bottom_navigation"
    android:orientation="vertical"
    android:padding="16dp">

        <TextView
            android:id="@+id/tvChatTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AI ChatBot"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="6dp"/>

        <TextView
            android:id="@+id/tvChatSubtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Prototype chatbot. Suggestions are informational only."
            android:textColor="#FFFFFF"
            android:paddingBottom="10dp"/>

        <TextView
            android:id="@+id/tvContext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Today: Consumed 0 kcal • Burned 0 kcal • Net 0 kcal"
            android:textColor="#FFFFFF"
            android:padding="10dp"/>

        <TextView
            android:id="@+id/tvChatTranscript"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="AI: Hi! Ask me about diet or exercise.\n"
            android:textColor="#FFFFFF"
            android:padding="10dp"
            android:background="#1A000000"
            android:scrollbars="vertical" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/etMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Type a message…"
                android:textColor="#FFFFFF"
                android:inputType="text"
                android:padding="12dp" />

            <Button
                android:id="@+id/btnSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFFF"
                android:text="Send" />

        </LinearLayout>
    </LinearLayout>

    <!-- Dashboard -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1F1F1F"
        app:itemIconTint="#03DAC5"
        app:itemTextColor="#FFFFFF"
        app:menu="@menu/bottom_nav_menu"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
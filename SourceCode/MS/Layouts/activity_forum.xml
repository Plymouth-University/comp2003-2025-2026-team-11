<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0F0F0F">

    <TextView
        android:id="@+id/forum_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:text="Fitness Community"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <HorizontalScrollView
        android:id="@+id/category_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/forum_title"
        android:scrollbars="none"
        android:padding="16dp"
        android:clipToPadding="false">

        <RadioGroup
            android:id="@+id/category_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_progress"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/category_selector"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:paddingHorizontal="25dp"
                android:text="Progress"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio_questions"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/category_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingHorizontal="25dp"
                android:text="Questions"
                android:textSize="14sp"
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/radio_tips"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/category_selector"
                android:button="@null"
                android:gravity="center"
                android:paddingHorizontal="25dp"
                android:text="Tips"
                android:textSize="14sp"
                android:textStyle="bold" />

        </RadioGroup>
    </HorizontalScrollView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/category_scroll"
        android:paddingHorizontal="12dp"
        android:clipToPadding="false"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_post"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="24dp"
        app:backgroundTint="#03DAC5"
        android:src="@android:drawable/ic_input_add"
        app:tint="#121212"
        app:borderWidth="0dp"
        app:elevation="6dp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise Log"
            android:textSize="22sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Log an exercise session."
            android:paddingBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Exercise type" />

        <Spinner
            android:id="@+id/spExerciseType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration (minutes)"
            android:paddingTop="12dp" />

        <EditText
            android:id="@+id/etDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 45"
            android:inputType="number"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Intensity"
            android:paddingTop="12dp" />

        <Spinner
            android:id="@+id/spIntensity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Time"
            android:paddingTop="12dp" />

        <EditText
            android:id="@+id/etExerciseTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="e.g., 18:10"
            android:inputType="text"
            android:padding="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notes (optional)"
            android:paddingTop="12dp" />

        <EditText
            android:id="@+id/etExerciseNotes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Any extra details (sets, steps, etc.)"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnSaveExercise"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Save Exercise" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Todayâ€™s logged exercises"
            android:textStyle="bold"
            android:paddingTop="22dp"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/tvExerciseListPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No exercises logged yet."
            android:padding="12dp" />

    </LinearLayout>
</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvChatTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AI ChatBot"
        android:textSize="22sp"
        android:textStyle="bold"
        android:paddingBottom="6dp"/>

    <TextView
        android:id="@+id/tvChatSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Prototype chatbot. Suggestions are informational only."
        android:paddingBottom="10dp"/>

    <TextView
        android:id="@+id/tvContext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Today: Consumed 0 kcal • Burned 0 kcal • Net 0 kcal"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tvChatTranscript"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="AI: Hi! Ask me about diet or exercise.\n"
        android:padding="10dp"
        android:background="#1A000000"
        android:scrollbars="vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp">

        <EditText
            android:id="@+id/etMessage"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="Type a message…"
            android:inputType="text"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnSend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send" />
    </LinearLayout>

</LinearLayout>
